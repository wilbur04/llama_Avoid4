<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llamaniac.not4.avoid4.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/one_player_button"
        android:layout_alignLeft="@+id/one_player_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/one_player_button"
        android:layout_alignStart="@+id/one_player_button"
        android:layout_marginTop="49dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/large" />

    </RelativeLayout>


    <Button
        android:id="@+id/one_player_button"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="23dp"
        android:text="@string/one_player"
        android:background="@drawable/button"
        android:textColor="@drawable/button_text_color"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:layout_above="@+id/two_player_button"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/two_player_button"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:text="@string/two_player"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:textColor="@drawable/button_text_color"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:layout_alignLeft="@+id/one_player_button"
        android:layout_alignStart="@+id/one_player_button"
        android:layout_alignRight="@+id/one_player_button"
        android:layout_alignEnd="@+id/one_player_button" />


</RelativeLayout>
