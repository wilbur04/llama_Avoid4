<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llamaniac.not4.avoid4.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="@string/app_name"
        android:textSize="50sp" />

    <Button
        android:id="@+id/two_player_button"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:text="@string/two_player"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/one_player_button"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="20dp"
        android:text="@string/one_player"
        android:layout_marginRight="20dip"
        android:layout_above="@+id/two_player_button"
        android:layout_alignLeft="@+id/two_player_button"
        android:layout_alignStart="@+id/two_player_button" />


</RelativeLayout>
