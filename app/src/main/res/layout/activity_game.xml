<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/player_turn_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Player 1's turn"
        android:textSize="24sp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBottom="@+id/p1imageView"
        android:layout_alignLeft="@+id/restart_button"
        android:layout_alignStart="@+id/restart_button"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/player_turn_string"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/c1a"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c2a"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c3a"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c4a"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c5a"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/c1b"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c2b"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c3b"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c4b"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c5b"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/c1c"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c2c"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c3c"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c4c"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c5c"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/c1d"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c2d"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c3d"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c4d"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c5d"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/c1e"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c2e"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c3e"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c4e"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

            <Button
                android:id="@+id/c5e"
                android:layout_height="62dip"
                android:layout_margin="2dp"
                android:layout_width="62dip"
                android:background="@drawable/shape3" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:id="@+id/p1imageView"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/ic_face_white_48px"
        android:tint="@color/disable"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="27dp" />


</RelativeLayout>